#!/usr/bin/env node

/**
 * Module dependencies.
 */

// run the contents of the "app.js" file
// it sets up the server, routes, middleware, and other configurations
var app = require('../app');
var debug = require('debug')('npx-demo-2:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000'); // run on port 3000
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app); // create the server with the configurations set in the "app.js" file

/**
 * Listen on provided port, on all network interfaces.
 */

// let the server listen on the port defined above
// if you want, you can add the arrow function to log "Server is listening on port 3000..." to the server console
server.listen(port); 

/** THE REST OF THE CODE IN THIS FILE WE CAN IGNORE */
/** It's error handling and validation stuff we don't need to worry about */

server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
